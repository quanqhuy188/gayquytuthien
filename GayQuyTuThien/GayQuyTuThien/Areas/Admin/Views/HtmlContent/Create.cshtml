@using static GayQuyTuThien.Constants.CommonConstants;
@model HtmlContentRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}

<style>
    .cke_1_contents{
        height:500px !important;
    }

</style>

@section footer{
    <script>

        // CKEDITOR.replace("PostContent", {
        //     height: '800px',
        // });

        // $('#PostContent').summernote();
        $('#PostContent').summernote({
            height: '600px',
        });

        // CKEDITOR.replace("PostContent", {
        //     height: '800px',
        // });
        $("#select-cate").select2({
        });

        $('input[type=radio][name=PostNow]').change(function () {
            if (this.value == '2') {
                $("#postDatet").css("display", "block");
            }
            else {
                $("#postDatet").css("display", "none");
            }
        });
       
    </script>
}

<div class="page-header page-header-light">
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="/admin/home" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Trang chủ</a>
                <span class="breadcrumb-item active">Thêm nội dung</span>
            </div>

            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content">

    <!-- Vertical form options -->
    <div class="row">
        <div class="col-md-12">

            <!-- Basic layout-->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Add Content</h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload"></a>
                            <a class="list-icons-item" data-action="remove"></a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-area="Admin" asp-controller="HtmlContent" asp-action="Create" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label>Content:</label>
                            <textarea rows="20" name="Content" asp-for="Content" style="width:100%" id="PostContent"></textarea>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Submit form <i class="icon-paperplane ml-2"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /basic layout -->

        </div>
    </div>

</div>

