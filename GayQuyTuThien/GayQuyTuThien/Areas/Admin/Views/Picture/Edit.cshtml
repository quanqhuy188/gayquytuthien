@using static GayQuyTuThien.Constants.CommonConstants;
@model PictureUpdateRequest
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}

@section footer{
    <script>
        $('#PostContent').summernote({
            height: '600px',
        });
        $("#select-cate").select2({
        });

        $('input[type=radio][name=PostNow]').change(function () {
            if (this.value == '2') {
                $("#postDatet").css("display", "block");
            }
            else {
                $("#postDatet").css("display", "none");
            }
        });

    </script>
}

<div class="page-header page-header-light">
    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="/admin/home" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Trang chủ</a>
                <span class="breadcrumb-item active">Sửa hình ảnh</span>
            </div>

            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

<div class="content">

    <!-- Vertical form options -->
    <div class="row">
        <div class="col-md-12">

            <!-- Basic layout-->
            <div class="card">
                <div class="card-header header-elements-inline">
                    <h5 class="card-title">Sửa hình ảnh</h5>
                    <div class="header-elements">
                        <div class="list-icons">
                            <a class="list-icons-item" data-action="collapse"></a>
                            <a class="list-icons-item" data-action="reload"></a>
                            <a class="list-icons-item" data-action="remove"></a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-area="Admin" asp-controller="Picture" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Hình ảnh: (Bắt buộc: 442px x 272px)</label>
                            <div class="">
                                <input asp-for="Image" type="file" class="form-control">
                                <input type="text" hidden asp-for="Id" class="form-control">
                            </div>
                            <span class="form-text text-muted">Các định dạng được chấp nhận: gif, png, jpg. Kích thước tệp tối đa 2Mb</span>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Gửi <i class="icon-paperplane ml-2"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /basic layout -->

        </div>
    </div>

</div>

